{
  "coc.preferences.formatOnSaveFiletypes": ["python"],
  "coc.preferences.formatOnType": true,

  // python
  "python.linting.enabled": true,
  "python.venvFolders": [
    "dev/Python/Envs"
  ],
    // autocompletion
  "python.jediPath":"/home/me/.local/lib/python3.8/site-packages/",
    // linting
  "python.linting.pylintEnabled": false,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Path": "/home/me/.local/bin/flake8",
  "python.linting.flake8Args": ["--ignore=E501,W391,E265,E241,E114,E117"],
    // formatting
  "python.formatting.provider": "black",
  "python.formatting.blackPath": "/home/me/.local/bin/black",
  "python.sortImports.path": "/home/me/.local/bin/isort",

  //highlightedyank
  "yank.highlight.duration": 150
}
